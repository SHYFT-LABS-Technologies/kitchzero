{
  "name": "@kitchzero/api",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "db:generate": "dotenv -e ../../.env -- prisma generate",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate dev",
    "db:seed": "dotenv -e ../../.env -- tsx prisma/seed.ts",
    "db:reset": "dotenv -e ../../.env -- prisma db push --force-reset && pnpm db:seed"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.0",
    "@kitchzero/config": "workspace:*",
    "@kitchzero/schemas": "workspace:*",
    "@kitchzero/types": "workspace:*",
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "fastify": "^4.24.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "dotenv-cli": "^7.4.4",
    "prisma": "^5.6.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}